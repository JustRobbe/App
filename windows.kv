WindowManager:
	MainCrewMateWindowHiddenAlive:
	MainCrewMateWindowHiddenDeath:
	MainCrewMateWindowShow:
	DeathConfirm:
	CodeWindow:

<MainCrewMateWindowHiddenAlive>:
	name: "mainCrewMateWindowHiddenAlive"

	Image:
		source: "Character(Red).png"
		size_hint: 0.9,0.9
		pos: root.width * 0.05,(root.height / 2) - (self.height / 2)

	FloatLayout:
		Button:
			text: "Show"
			size_hint: 0.15,0.15
			size_hint_y: None
			height: self.width
			pos_hint: {"right":1,"top":1}

			on_release: 
				app.root.current = "mainCrewMateWindowShow"
				root.manager.transition.direction = "left"

<MainCrewMateWindowHiddenDeath>:
	name: "mainCrewMateWindowHiddenDeath"

	Image:
		source: "Ghost(Red).png"
		size_hint: 0.9,0.9
		pos: root.width * 0.05,(root.height / 2) - (self.height / 2)

	FloatLayout:
		Button:
			text: "Show"
			size_hint: 0.15,0.15
			size_hint_y: None
			height: self.width
			pos_hint: {"right":1,"top":1}

			on_release: 
				app.root.current = "mainCrewMateWindowShow"
				root.manager.transition.direction = "left"

<MainCrewMateWindowShow>:
	name: "mainCrewMateWindowShow"

	FloatLayout:
		Button:
			text: "Hide"
			size_hint: 0.15,0.15
			size_hint_y: None
			height: self.width
			pos_hint: {"right":1,"top":1}

			on_release: root.hideFunc()

	GridLayout:
		cols: 1

		size_hint: 0.8,0.8
		pos_hint: {"x": 0.1,"y":0.1}

		Button:
			text: "Tasks"

		Button:
			text: "Report"

		Button:
			text: "Death"
			on_release: root.deathFunc()

<DeathConfirm>:
	name: "deathConfirm"

	FloatLayout:
		Button:
			text: "Back"
			size_hint: 0.15,0.15
			size_hint_y: None
			height: self.width
			pos_hint: {"right":1,"top":1}

			on_release: 
				app.root.current = "mainCrewMateWindowShow"
				root.manager.transition.direction = 'right'

	GridLayout:
		cols: 1

		size_hint : 0.5,0.5
		size_hint_y: None
		height: self.width

		pos_hint: {"x":0.25, "y":0.25}

		Label:
			text: "You sure?"
			multiline: True
			font_size: 50

		GridLayout:
			cols: 2

			Button:
				text: "Yes"
				on_release: root.yes()

			Button:
				text: "No"
				on_release: 
					app.root.current = "mainCrewMateWindowShow"
					root.manager.transition.direction = 'right'

<CodeWindow>:
	name: "codeWindow"

	code: code
	inputcode: inputcode

	FloatLayout:

		pos: 0,root.height / 2
		size: root.width, root.height / 2

		GridLayout:
			cols:1

			size_hint: 1,0.5
			pos_hint:{"x":0, "y":0}

			Label:
				id: code
				text: ""
				font_size: 50
				bold: True

			Label:
				id: inputcode
				text: "6464"
				font_size: 50
				bold: True

	FloatLayout:

		GridLayout:
			size_hint : 0.7,0.7
			size_hint_y: None
			height: self.width
			
			pos: root.width * 0.15, root.width * 0.15
			cols:3

			Button:
				text: "1"
				on_release: root.btn1()

			Button:
				text: "2"
				on_release: root.btn2()

			Button:
				text: "3"
				on_release: root.btn3()

			Button:
				text: "4"
				on_release: root.btn4()

			Button:
				text: "5"
				on_release: root.btn5()

			Button:
				text: "6"
				on_release: root.btn6()

			Button:
				text: "7"
				on_release: root.btn7()

			Button:
				text: "8"
				on_release: root.btn8()

			Button:
				text: "9"
				on_release: root.btn9()